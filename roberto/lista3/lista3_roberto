Nona questão:

#include "iostream"
#include <math.h>
using namespace std;
int isPrime(int k) {
  if (k <= 1)
    return 0;

  for (unsigned int i = 2; i <= (unsigned int)sqrt(k); i++) {
    if (k % i)
      return 1;
  }
  return 0;
}

int main(int argc, char *argv[]) {
  int x;
  cout << "Enter a num: ";
  std::cin >> x;

  cout << isPrime(x) << endl;
  return 0;
}

