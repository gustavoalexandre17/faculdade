Oitava questão:

#include <iostream>
using namespace std;

int main(int argc, char *argv[]) {
  int n;
  std::cin >> n;

  for (int i = 3; i <= n; i++) {
    if ((i - 2) * (i - 1) * i == n) {
      cout << "Triangular" << endl;
      break;
    }
  }
  return 0;
}

