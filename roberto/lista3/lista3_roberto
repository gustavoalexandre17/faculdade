Décima quinta: 

#include <iostream>
#include <string>
using namespace std;

int main() {
  int n1, n2;
  cin >> n1 >> n2;

  std::string primeiroNum = to_string(n1);
  std::string segundoNum = to_string(n2);

  if (primeiroNum.size() >= segundoNum.size()) {
    cout << "Insira números válidos" << endl;
    exit(0);
  }

  string aux = "";
  for (size_t i = 0; i <= segundoNum.size() - primeiroNum.size(); ++i) {
    aux = "";
    for (size_t j = 0; j < primeiroNum.size(); ++j) {
      if (segundoNum[i + j] == primeiroNum[j]) {
        aux += segundoNum[i + j];
      } else
        break;
    }

    if (aux == primeiroNum) {
      break;
    }
  }

  if (aux == primeiroNum)
    cout << n1 << " é subnúmero de " << n2 << endl;
  else
    cout << n1 << " não é subnúmero de " << n2 << endl;

  return 0;
}
