Sexta questão:

#include "iostream"
using namespace std;

int main(int argc, char *argv[]) {
  int a;
  cin >> a;

  if (a < 0)
    return 0;

  int contador = a;

  while (contador > 2) {
    a *= contador - 1;
    contador -= 1;
  }

  cout << a << endl;

  return 0;
}

