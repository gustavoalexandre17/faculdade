Segunda questão:

#include "iostream"
using namespace std;

int main(int argc, char *argv[]) {
  int n;

  while (n != 0) {
    std::cout << "Digite seu número: ";
    std::cin >> n;
    if (n == 0)
      exit(0);
    cout << n * n << endl;
  }
  return 0;
}

