Terceira questão: 

#include "iostream"
using namespace std;

int main(int argc, char *argv[]) {
  int n, contador, incrementador;
  std::cin >> n;
  contador = 0;
  incrementador = 0;

  while (contador != n) {
    if (incrementador % 2) {
      cout << incrementador << " ";
      contador++;
    }
    incrementador++;
  }
  return 0;
}
