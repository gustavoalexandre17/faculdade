Décima primeira questão: 

#include "iostream"
using namespace std;

int main(int argc, char *argv[]) {
  int n;
  std::cout << "Qual vai ser o tamanho da sequencia? ";
  cin >> n;
  int valorA;
  int valorB;
  int streak = 1;

  std::cout << "Digite uma sequencia com " << n << " números!" << endl;

  for (int i = 1; i <= n; i++) {
    std::cout << "Elemento " << i << " : ";
    cin >> valorA;
    if (valorA == valorB)
      streak++;
    valorB = valorA;
  }
  std::cout << "Há " << streak << " números consecutivos" << endl;
  return 0;
}

