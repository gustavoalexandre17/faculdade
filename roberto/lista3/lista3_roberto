Quinta questão: 

#include "iostream"
using namespace std;

int main(int argc, char *argv[]) {
  int n;
  cin >> n;
  int somaPares = 0;

  for (int i = 0; i <= n; i++) {
    if (i % 2 == 0)
      somaPares += i;
  }
  cout << somaPares << endl;
  return 0;
}

