Décima terceira:

#include "iostream"
using namespace std;

int main(int argc, char *argv[]) {
  // usando o algoritmo de euclides
  int a, b, c;
  cout << "Primeiro Número: ";
  cin >> a;
  std::cout << "Segundo Número: ";
  cin >> b;

  if (a == 0) {
    std::cout << "O MDC é " << b << std::endl;
    return 0;
  }
  if (b == 0) {
    std::cout << "O MDC é " << a << std::endl;
    return 0;
  }

  if(a < b){
    int temp = a;
    a = b;
    b = temp; // a sempre vai ser o maior e b sempre o menor 
  }

  while (b!=0) {
   int resto = a % b; 
   a = b;
   b = resto;
  }
  std::cout << "O MDC é " << a << endl;

  return 0;
}

--------------------------------------------------------------- 

Décima quarta: 

#include "iostream"
using namespace std;

// CALCULANDO O MMC USANDO DO MMC, SABENDO QUE MMM(a,n) = (axb) / MDC(a,b)

long long mdc(long long a, long long b) {
  if (a == 0)
    return b;
  if (b == 0)
    return a;

  if (a < b) {
    long long temp = a;
    a = b;
    b = temp;
  }

  while (b != 0) {
    long long resto = a % b;
    a = b;
    b = resto;
  }

  return a;
}

int main(int argc, char *argv[]) {
  long long x, y;
  std::cout << "Primeiro número: ";
  std::cin >> x;
  std::cout << "Segundo número: ";
  std::cin >> y;

  long long resultado = (x / mdc(x, y)) * y;

  std::cout << "O MMC é: " << resultado << endl;

  return 0;
}

