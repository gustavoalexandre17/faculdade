Sétima questão:

#include <iostream>
using namespace std;

int main(int argc, char *argv[]) {
  int a, b, n, contador;
  std::cin >> a >> b >> n;
  int incrementador = 0;
  contador = 0;

  while (contador != n) {
    if (incrementador % a == 0 || incrementador % b == 0) {
      cout << incrementador << " ";
      contador++;
    }
    incrementador++;
  }
  return 0;
}

