Quarta questão:

#include "iostream"
using namespace std;

int main(int argc, char *argv[]) {
  int n;
  std::cout << "Número de alunos: ";
  std::cin >> n;
  int nota = 0;
  int maiorNota = 0;
  int menorNota = 11;

  for (int i = 1; i <= n; i++) {
    std::cout << "Nota do aluno " << i << " : ";
    std::cin >> nota;

    if (nota < 0 || nota > 10) {
      cout << "Por favor, insira notas válidas!" << endl;
      exit(0);
    }

    if (nota > maiorNota)
      maiorNota = nota;

    if (nota < menorNota)
      menorNota = nota;
  }

  std::cout << "Maior nota: " << maiorNota << endl;
  std::cout << "Menor nota: " << menorNota << endl;

  return 0;
}

