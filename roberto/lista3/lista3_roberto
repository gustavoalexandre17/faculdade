Décima segunda: 

#include "iostream"
#include <iomanip>
using namespace std;

int main(int argc, char *argv[]) {
  float altura, maiorAltura, menorAltura, alturaTotalM, alturaTotalH;
  int n;
  menorAltura = 999.0;
  maiorAltura = 0;
  alturaTotalH = 0;
  alturaTotalM = 0;
  int quantH = 0;
  int quantM = 0;
  char sexo;

  std::cout << "Quantas pessoas iremos analizar? ";
  cin >> n;

  for (int i = 1; i <= n; i++) {

    std::cout << "Pessoa " << i << ": " << endl;
    std::cout << "Altura: ";
    std::cin >> altura;
    std::cout << "Sexo: ";
    std::cin >> sexo;

    if (sexo == 'M') {
      alturaTotalM += altura;
      quantM++;
    }

    if (sexo == 'H') {
      alturaTotalH += altura;
      quantH++;
    }

    if (altura > maiorAltura)
      maiorAltura = altura;

    if (altura < menorAltura)
      menorAltura = altura;
  }

  cout << endl;

  float mediaM;
  if (quantM != 0)
    mediaM = alturaTotalM / quantM;
  else
    mediaM = 0;

  float mediaH;
  if (quantH != 0)
    mediaH = alturaTotalH / quantH;
  else
    mediaH = 0;

  std::cout << "Maior altura: " << maiorAltura << " metros." << endl;
  std::cout << "Menor altura: " << menorAltura << " metros." << endl;
  std::cout << "Altura média masculina: " << fixed << setprecision(1) << mediaH
            << " metros." << endl;
  std::cout << "Altura média feminina: " << fixed << setprecision(1) << mediaM
            << " metros." << endl;

  float percentual;

  if (mediaH > mediaM) {
    if (mediaM == 0) {
      cout << "Não é possível gerar um percentual relativo porque não há "
              "nenhuma mulher.";
      return 0;
    }
    percentual = (((mediaH - mediaM) / mediaM) * 100);
    std::cout << "Os homens são " << fixed << setprecision(1) << percentual
              << "% mais altos que as mulheres" << endl;
  }

  else if (mediaM > mediaH) {
    if (mediaH == 0) {
      cout << "Não é possível gerar um percentual relativo porque não há "
              "nenhum homem.";
      return 0;
    }
    percentual = (((mediaM - mediaH) / mediaH) * 100);
    std::cout << "As mulheres são " << fixed << setprecision(1) << percentual
              << "% mais altas que os homens" << endl;
  }
  return 0;
}

