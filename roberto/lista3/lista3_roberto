Primeira questão:

#include "iostream"
using namespace std;

int main(int argc, char *argv[]) {
  int n;
  std::cin >> n;
  std::cout << endl;

  for (int i = 1; i <= n; i++) {
    std::cout << i << " ";
  }
  return 0;
}

