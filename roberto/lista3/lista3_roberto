Décima questão: 

#include "iostream"
using namespace std;

int main(int argc, char *argv[]) {
  int valorAtual = 0;
  int diaAtual = 0;
  int melhorDia = 0;
  int melhorDiaValor = 0;

  for (int i = 0; i <= 30; i++) {
    cout << "Discos vendidos no dia " << i << ": ";
    cin >> valorAtual;
    diaAtual = i;

    if (valorAtual > melhorDiaValor) {
      melhorDiaValor = valorAtual;
      melhorDia = diaAtual;
    }
  }
  cout << melhorDia << " : " << melhorDiaValor;
  return 0;
}

